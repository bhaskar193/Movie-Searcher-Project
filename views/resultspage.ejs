              <h5 class="card-title"><%=element.Title%></h5>
              <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
              <a href="/result/<%=element.imdbID%>" class="btn btn-primary">Know More</a>
            </div>
          </div>
        </div>

        <%if(i===4){i = 1%>
            </div>
            <%}
        else{i = i+1}
        %>

    <%});} else {%>

        <h1 style="text-align: center;">Aisi koi movie hai hi nahi</h1>

        <% } %> 
    </div>

