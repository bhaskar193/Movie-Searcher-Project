
<%- include("./partials/header.ejs") %> 

    <%if(movieData.Response === 'True'){%>
        

        <%var i = 1;%>
        <div class="container">
        <% movieData.Search.forEach(function (element){ 
            if(i===1){%>
                <div class="row">
            <%}%>
            <div class="col-sm">
        <div class="card" style="width: 18rem;">
            <img src= "<%= element.Poster %> " class="card-img-top" alt="Poster of the movie.">
